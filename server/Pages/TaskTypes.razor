@page "/task-types"
@layout MainLayout
@inherits InDrivoHRM.Pages.TaskTypesComponent

@using Radzen
@using Radzen.Blazor
@using InDrivoHRM.Models.Crm
@using Microsoft.AspNetCore.Identity;
@using InDrivoHRM.Models
@using Microsoft.AspNetCore.Authorization
@attribute [Authorize]


@inject Microsoft.Extensions.Localization.IStringLocalizer<TaskTypes> L
<RadzenContent Container="main">
  <ChildContent>
    <RadzenHeading Size="H1" Text="Task Types">
    </RadzenHeading>
    <div class="row">
      <div class="col-md-12">
        <RadzenButton Icon="add_circle_outline" style="margin-bottom: 10px" Text="Add" Click="@Button0Click">
        </RadzenButton>
        <RadzenDataGrid @ref="grid0" AllowFiltering="true" FilterMode="FilterMode.Advanced" AllowPaging="true" AllowSorting="true" Data="@getTaskTypesResult" TItem="InDrivoHRM.Models.Crm.TaskType" RowSelect="@Grid0RowSelect">
          <Columns>
            <RadzenDataGridColumn TItem="InDrivoHRM.Models.Crm.TaskType" Property="Id" Title="Id">
            </RadzenDataGridColumn>
            <RadzenDataGridColumn TItem="InDrivoHRM.Models.Crm.TaskType" Property="Name" Title="Name">
            </RadzenDataGridColumn>
            <RadzenDataGridColumn TItem="InDrivoHRM.Models.Crm.TaskType" Filterable="false" Sortable="false" Width="70px" TextAlign="TextAlign.Center">
              <Template Context="radzenCrmModelsCrmTaskType">
                <RadzenButton ButtonStyle="ButtonStyle.Danger" Icon="close" Size="ButtonSize.Small" Click="@((args) =>GridDeleteButtonClick(args, radzenCrmModelsCrmTaskType))" @onclick:stopPropagation="true">
                </RadzenButton>
              </Template>
            </RadzenDataGridColumn>
          </Columns>
        </RadzenDataGrid>
      </div>
    </div>
  </ChildContent>
</RadzenContent>
